{
  "name": "basic-static-website-typescript",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "webpack-dev-server",
    "build": "webpack",
    "watch": "webpack -w",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore src",
    "format": "prettier --write 'src/**/*.{js,ts,html,json}'",
    "clean": "rimraf ./dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,html,json}": [
      "prettier --write 'src/**/*.{js,ts,html,json}'"
    ],
    "src/**/*.{js,ts}": [
      "eslint --ext .js,.ts --ignore-path .gitignore src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashtkn/basic-static-website-typescript.git"
  },
  "author": "Asahi Takenouchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashtkn/basic-static-website-typescript/issues"
  },
  "homepage": "https://github.com/ashtkn/basic-static-website-typescript#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
